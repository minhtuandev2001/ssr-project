mixin pagination(pagination)
  ul(class="pagination justify-content-end")
    if pagination.currentPage > 1
      li(class="page-item")
        button(type="button" class="page-link" button-pagination=`${pagination.currentPage-1}`) Trang trước
    - for (let i = 1 ; i <= pagination.totalPage ; i++)
      li(class=`page-item ${pagination.currentPage == i ? "active": ""}`)
        button(type="button" class="page-link" button-pagination=`${i}`) #{i}
    if pagination.currentPage < pagination.totalPage
      li(class="page-item")
        button(type="button" class="page-link" button-pagination=`${pagination.currentPage+1}`) kế tiếp