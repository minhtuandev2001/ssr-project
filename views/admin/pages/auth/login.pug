extends ../../layouts/auth.pug
include ../../mixin/alert.pug

block main
  +alertError(4000)
  .container 
    .container-form-admin
      h1(class="text-center") Login
      form(
        action=`${prefixAdmin}/auth/login`
        method="POST"
      )
        div(class="form-group")
          label(for="email") Email *
          input(
            type="text"
            class="form-control"
            id="email"
            name="email"
            require
          )
        div(class="form-group")
          label(for="password") Password *
          input(
            type="password"
            class="form-control"
            id="password"
            name="password"
          )
        div(class="form-group")
          button(
            type="submit"
            class="btn btn-primary btn-block"
          ) Login
  script(src="/admin/js/products.js")