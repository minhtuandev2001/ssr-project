extends ../../layouts/default.pug 

block main
  h1.mb-5 Account information
  if (user.avatar)
    img(src=user.avatar width="150px" class="mb-5")
  else 
    p 
  if (user.fullName)
    p.mb-5 Full Name : <b>#{user.fullName}</b>
  if (user.email)
    p.mb-5 Email: <b>#{user.email}</b>
  if (user.phone)
    p.mb-5 Phone : <b>#{user.phone}</b>
  p.mb-5
    span Status: 
    span 
      b #{user.status === "active" ? "Hoạt động" : "Dừng hoạt động"}
  if(role.title)
    p.mb-5 Permission: <b>#{role.title}</b>

  a(
    href=`${prefixAdmin}/my-account/edit`
    class="btn btn-primary"
  ) update