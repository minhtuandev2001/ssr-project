extends ../../layouts/default.pug 

block main
  h1.mb-5 Thông tin cá nhân
  if (user.avatar)
    img(src=user.avatar width="150px" class="mb-5")
  else 
    p chua co 
  if (user.fullName)
    p.mb-5 Họ tên: <b>#{user.fullName}</b>
  if (user.email)
    p.mb-5 Email: <b>#{user.email}</b>
  if (user.phone)
    p.mb-5 Số điện thoại: <b>#{user.phone}</b>
  p.mb-5
    span Trạng thái: 
    span 
      b #{user.status === "active" ? "Hoạt động" : "Dừng hoạt động"}
  if(role.title)
    p.mb-5 Phân quyền: <b>#{role.title}</b>

  a(
    href=`${prefixAdmin}/my-account/edit`
    class="btn btn-primary"
  ) Chỉnh sửa thông tin