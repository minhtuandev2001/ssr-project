extends ../../layouts/default.pug 
include ../../mixin/alert.pug
include ../../mixin/sort.pug
include ../../mixin/filterStatus.pug 
include ../../mixin/search.pug
include ../../mixin/form-change-multi.pug
include ../../mixin/pagination.pug
include ../../mixin/table.pug
include ../../mixin/notAccess.pug

block main 
  if (role.permissions.includes('products-category_view'))
    h1 Danh mục sản phẩm
    +alertSuccess(4000)
    +alertError(4000)
    .card.mb-3
      .card-header Bộ lọc và Tìm kiếm
      .card-body
        .row
          .col-6
            div(class="filter__actions")
              +filterStatus(filterStatus)
          .col-6
            +search("keyword",keyword)
    +sortCategory()
    .card.mb-3 
      .card-header Danh sách
        .card-body 
          .row.mb-3
            .col-8 
              if (role.permissions.includes('products-category_edit'))
                +form-change-multi(`${prefixAdmin}/products-category/change-multi?_method=PATCH`)
            .col-4  
              if (role.permissions.includes('products-category_create'))
                a(
                  href=`${prefixAdmin}/products-category/create`
                  class="btn btn-outline-success"
                ) + Thêm mới 
          table(
            class="table table-hover table-sm table--product"
            checkbox-multi
            )
            thead 
              tr
                th  
                  input(type="checkbox" name="checkall")
                th STT
                th Hình Ảnh
                th Tiêu Đề
                th Vị trí
                th Trạng Thái
                th Hành Động
            tbody
              +tableTree(categorys)
    +pagination(pagination)
    form(
      action=""
      method="POST"
      id="form-change-status"
      data-path=`${prefixAdmin}/products-category/change-status`
    )
    form(
      action=""
      method="POST"
      id="form-delete-product"
      data-path=`${prefixAdmin}/products-category/delete`
    )
    script(src="/admin/js/products.js")
  else 
    +notAccess()