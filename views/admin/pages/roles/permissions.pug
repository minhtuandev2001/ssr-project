extends ../../layouts/default.pug
include ../../mixin/alert.pug

block main 
  h1.mb-4 Rights group
  +alertSuccess(4000)
  +alertError(4000)
  if(roles)
    div(dataRoles=roles)
    div(class="text-right")
      button(
        type="submit"
        class="btn btn-primary mb-3 btn-lg"
        button-submit
      ) update
    table(
      class="table table-hover table-bordered table--product"
      table-premisstions
    )
      thead 
        tr 
          th Roles
          each item in roles
            th(class="text-center") #{item.title}
      tbody
        tr(data-name="id" hidden)
          td
          each item in roles
            td(class="text-center")
              input(type="text" value=item.id)
        //- Danh mục sản phẩm 
        tr
          th(colspan="4").text-left
            b Product category
        tr(data-name="products-category_view")
          td view
          each item,index in roles
            td(class="text-center")
              input(type="checkbox")
        tr(data-name="products-category_create")
          td create
          each item in roles
            td(class="text-center")
              input(type="checkbox")
        tr(data-name="products-category_edit")
          td edit
          each item in roles
            td(class="text-center")
              input(type="checkbox")
        tr(data-name="products-category_delete")
          td delete
          each item in roles
            td(class="text-center")
              input(type="checkbox")
        //- Sản phẩm
        tr
          th(colspan="4").text-left
            b Product
        tr(data-name="products_view")
          td view
          each item,index in roles
            td(class="text-center")
              input(type="checkbox")
        tr(data-name="products_create")
          td create
          each item in roles
            td(class="text-center")
              input(type="checkbox")
        tr(data-name="products_edit")
          td edit
          each item in roles
            td(class="text-center")
              input(type="checkbox")
        tr(data-name="products_delete")
          td delete
          each item in roles
            td(class="text-center")
              input(type="checkbox")
        //- Nhóm quyền
        tr
          th(colspan="4").text-left
            b Rights group
        tr(data-name="roles_view")
          td view
          each item,index in roles
            td(class="text-center")
              input(type="checkbox")
        tr(data-name="roles_create")
          td create
          each item in roles
            td(class="text-center")
              input(type="checkbox")
        tr(data-name="roles_edit")
          td edit
          each item in roles
            td(class="text-center")
              input(type="checkbox")
        tr(data-name="roles_delete")
          td delete
          each item in roles
            td(class="text-center")
              input(type="checkbox")
        //- Phân quyền 
        tr(data-name="roles_permission")
          td permission
          each item in roles
            td(class="text-center")
              input(type="checkbox")
        //- Nhóm quyền
        tr
          th(colspan="4").text-left
            b Account
        tr(data-name="account_view")
          td view
          each item,index in roles
            td(class="text-center")
              input(type="checkbox")
        tr(data-name="account_create")
          td create
          each item in roles
            td(class="text-center")
              input(type="checkbox")
        tr(data-name="account_edit")
          td edit
          each item in roles
            td(class="text-center")
              input(type="checkbox")
        tr(data-name="account_delete")
          td delete
          each item in roles
            td(class="text-center")
              input(type="checkbox")
    form(
    action=`${prefixAdmin}/roles/permissions?_method=PATCH`
    method="POST"
    id="form-change-permissions"
    )
      div(class="form-group")
        input(
          type="text"
          class="form-control"
          name="permissions"
          hidden
        )
  script(src="/admin/js/roles.js") 
