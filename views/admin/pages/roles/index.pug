extends ../../layouts/default.pug 
include ../../mixin/alert.pug

block main 
  h1(class="mb-4") Nhóm quyền
  +alertSuccess(4000)
  +alertError(4000)
  .card.mb-3 
    .card-header Danh sách
    .card-body 
      .row.mb-3
        .col-8 
        .col-4.text-right 
          a(
            href=`${prefixAdmin}/roles/create`
            class="btn btn-outline-success"
          ) + Thêm mới
      table(
        class="table table-hover table-sm table--product"
        checkbox-multi
        )
        thead 
          tr
            th  
              input(type="checkbox" name="checkall")
            th STT
            th Nhóm quyền
            th Mô tả ngắn
            th Hành Động
        tbody
          each item,index in roles
            tr(class="product--item")
              td 
                input(
                  type="checkbox"
                  name="id"
                  value=item.id
                )
              td #{(index+1)}
              td #{item.title}
              td !{item.description}
              td
                a(href=`${prefixAdmin}/roles/detail/${item.id}`
                class="btn btn-success btn-lg" 
                style="margin-right: 10px") Chi tiết
                a(href=`${prefixAdmin}/roles/edit/${item.id}`
                class="btn btn-warning btn-lg" 
                style="margin-right: 10px") Sửa
                button(
                  type="button" 
                  class="btn btn-danger btn-lg"
                  button-delete
                  data-id=item.id
                  ) Xóa
  form(
    action=""
    method="POST"
    id="form-delete-product"
    data-path=`${prefixAdmin}/roles/delete`
  )
  script(src="/admin/js/products.js") 