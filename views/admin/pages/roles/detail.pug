extends ../../layouts/default.pug 

block main 
  if (role.title)
    h1(class="mb-5") #{role.title}
  if (role.description)
    span Description : 
    p(class="mb-4") !{role.description}
  if (role.permissions)
    p(class="mb-3 mt-3") The following actions are possible
    div(class="mb-2")
      each item in role.permissions
        p(class="mb-2") 
          b + #{item}
  if (role)
    a(
      href=`${prefixAdmin}/roles/edit/${role.id}`
      class="btn btn-warning btn-lg mt-5" 
      style="margin-right: 10px") edit

  script(src="/admin/js/products.js") 