              a(href="#product") 
                span Sản phẩm 
                <i class="bi bi-chevron-down"></i>
            div.navbar--item
              a(href="#post") 
                span Bài viết 
                <i class="bi bi-chevron-down"></i>
          div
            button(type="button") 
              <i class="bi bi-search"></i>
            button(type="button") 
              <i class="bi bi-bag"></i>
