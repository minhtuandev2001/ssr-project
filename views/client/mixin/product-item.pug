mixin product-item(item)
  a(href=`/products/detail/${item.slug}`)
    .productinfo.text-center
      img(src=item.thumbnail alt=item.title)
      h2 #{item.priceNew}$
      p #{item.title}
      form(
        action=`/cart/add/${item._id}`
        method="POST"
      )
        input(
          type="number"
          class="form-control mb-2 hidden"
          name="quantity"
          value="1"
          min="1"
          max=item.stock
        )
        button.btn.btn-default.add-to-cart(type="submit") Add to cart
    if (item.featuread === "1")
      img.new(src='/media/sale.png' alt='')