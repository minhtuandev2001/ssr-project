extends ../../layouts/default.pug 
include ../../mixin/alert.pug 

block main 
  +alertSuccess(4000)
  +alertError(4000)
  .container 
    .row.justify-content-center.mb-5.mt-5
      .col-8
        h1(class="text-center") Lấy lại mật khẩu
        form(
          action="/user/password/forgot"
          method="POST"
        )
          div(class="form-group")
            label(for="email" class="mb-2") Email
            input(
              type="text"
              class="form-control"
              id="email"
              name="email"
            )
          div(class="form-group")
            button(
              type="submit"
              class="btn btn-primary btn-block"
            ) Gửi email xác nhận