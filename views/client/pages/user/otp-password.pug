extends ../../layouts/default.pug 
include ../../mixin/alert.pug 

block main 
  +alertSuccess(4000)
  +alertError(4000)
  .container 
    .row.justify-content-center.mb-5.mt-5
      .col-8
        h1(class="text-center") Nhập mã xác thực
        form(
          action="/user/password/otp"
          method="POST"
        )
          div(class="form-group")
            label(for="email" class="mb-2") Email
            input(
              type="text"
              class="form-control"
              id="email"
              name="email"
              value=email
              readonly
            )
          div(class="form-group")
            label(for="otp" class="mb-2") Mã OTP
            input(
              type="text"
              class="form-control"
              id="otp"
              name="otp"
            )
          div(class="form-group")
            button(
              type="submit"
              class="btn btn-primary btn-block"
            ) Xác nhận
