extends ../../layouts/default.pug 
include ../../mixin/alert.pug 

block main 
  +alertSuccess(4000)
  +alertError(4000)
  .container 
    .row.justify-content-center
      .col-8
        h1(class="text-center") Đăng ký tài khoản
        form(
          action="/user/register"
          method="POST"
        )
          div(class="form-group")
            label(for="fullName" class="mb-2") Họ tên
            input(
              type="text"
              class="form-control"
              id="fullName"
              name="fullName"
            )
          div(class="form-group")
            label(for="email" class="mb-2") Email
            input(
              type="text"
              class="form-control"
              id="email"
              name="email"
            )
          div(class="form-group")
            label(for="password" class="mb-2") Mật khẩu
            input(
              type="text"
              class="form-control"
              id="password"
              name="password"
            )
          div(class="form-group")
            button(
              type="submit"
              class="btn btn-primary btn-block"
            ) Đăng ký
