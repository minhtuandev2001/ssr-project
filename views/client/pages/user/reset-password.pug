extends ../../layouts/default.pug 
include ../../mixin/alert.pug 

block main 
  +alertSuccess(4000)
  +alertError(4000)
  .container 
    .row.justify-content-center.mb-5.mt-5
      .col-8
        h1(class="text-center") Cập nhật mật khẩu mới
        form(
          action="/user/password/reset"
          method="POST"
        )
          div(class="form-group")
            label(for="password" class="mb-2") Mật khẩu mới
            input(
              type="password"
              class="form-control"
              id="password"
              name="password"
            )
          div(class="form-group")
            label(for="confirmPassword" class="mb-2") Xác nhận
            input(
              type="password"
              class="form-control"
              id="confirmPassword"
              name="confirmPassword"
            )
          div(class="form-group")
            button(
              type="submit"
              class="btn btn-primary btn-block"
            ) Xác nhận
